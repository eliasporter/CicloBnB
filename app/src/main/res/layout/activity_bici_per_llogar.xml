<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bici_per_llogar"
    android:background="@color/blauCel">


    <TextView
        android:id="@+id/NomLoginBiciPerLlogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:text="@string/LinkLoginUser"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:text="Usuari :"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="366dp"
        android:layout_height="640dp"
        android:translationY="40dp"
        android:translationX="10dp"
        tools:ignore="MissingConstraints">
        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NomLoginBiciPerLlogar">
            <!--android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="68dp"-->

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp"
                android:text="Descripcio :" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Dades de la bicicleta :"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="223dp"
                android:layout_marginTop="70dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:text="Tipus :" />

            <TextView
                android:id="@+id/tipusBici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="60dp"
                android:text="Muntanya"
                app:layout_constraintStart_toEndOf="@+id/textView26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:text="Marca:"/>

            <TextView
                android:id="@+id/TextMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:text="Modelo:"/>

            <TextView
                android:id="@+id/TextModelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="120dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="150dp"
                android:text="Suspensió:"/>

            <TextView
                android:id="@+id/TextSuspension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="150dp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="330dp"
                android:text="Disponibilitat :" />

            <com.google.android.material.navigation.NavigationView
                android:layout_width="320dp"
                android:layout_height="102dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp">

                <TextView
                    android:id="@+id/descripcioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Una descripcó sobre la bicicleta parlant dels defectes i de les coses bones de les que disposa." />
            </com.google.android.material.navigation.NavigationView>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="367dp"
                android:layout_height="300dp"
                android:layout_marginTop="350dp"
                android:layout_marginStart="0dp"/>

            <!--
                                                    <androidx.recyclerview.widget.RecyclerView
                                                        android:id="@+id/dispoRecycler"
                                                        android:layout_width="match_parent"
                                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                                        android:layout_height="200dp"
                                                        android:layout_marginTop="380dp"
                                                        android:layout_marginBottom="20dp"
                                                        app:layout_constraintBottom_toTopOf="@+id/iniciarXatButton"
                                                        tools:listitem="@layout/disponibilitats_text"
                                                        /> -->
            <Button
                android:id="@+id/btnDesde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="650dp"
                android:text="Des de"/>

            <TextView
                android:id="@+id/lblDesde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="700dp"
                android:text="2023-05-07"/>

            <Button
                android:id="@+id/btnFins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="222dp"
                android:layout_marginTop="650dp"
                android:text="Fins"/>

            <TextView
                android:id="@+id/lblFins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="232dp"
                android:layout_marginTop="700dp"
                android:text="2023-05-07"/>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:textSize="20dp"
                android:layout_marginTop="740dp"
                android:text="Total:" />

            <TextView
                android:id="@+id/preuBici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginTop="740dp"
                android:textSize="20dp"
                android:text="15€"
                app:layout_constraintStart_toEndOf="@+id/textView26" />

        </com.google.android.material.navigation.NavigationView>
    </ScrollView>

    <Button
        android:id="@+id/LlogarBici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Llogar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/iniciarXatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="Xat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>